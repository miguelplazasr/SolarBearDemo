<div class="inset" hide-sm></div>
<div layout="row" layout-align="center center">
    <md-card flex-gt-sm="90" flex-gt-md="80">
        <md-card-header>
            <md-button class="btn btn-default" aria-label="Add Customer" ui-sref="home.customer.new" ">
                <ng-md-icon icon="add"></ng-md-icon> Add Customer
            </md-button>
        </md-card-header>
        <md-card-content>

            <md-list>
                <md-list-item ng-repeat="item in vm.allCustomers">
                    <img ng-src="{{ asset('assets/img/male.png') }}" class="md-avatar"
                         alt="[[ item.first_name ]] [[ item.last_name ]]"/>

                    <div class="md-list-item-text">
                        <h3>[[ item.first_name ]] [[ item.last_name ]]</h3>
                        <h4>[[ item.address ]]</h4>
                    </div>
                    <md-divider></md-divider>



                    <md-divider md-inset hide-sm ng-if="!$last"></md-divider>
                    <md-divider hide-gt-sm ng-if="!$last"></md-divider>
                </md-list-item>
                <md-divider></md-divider>
                <md-list-item layout class="inset">
                    <md-button layout layout-align="start center" flex class="md-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                             viewBox="0 0 24 24">
                            <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
                        </svg>
                        More
                    </md-button>
                </md-list-item>
            </md-list>



        </md-card-content>
    </md-card>
</div>
