<md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left"
            md-is-locked-open="$mdMedia('gt-md')">
    <md-toolbar class="md-tall md-hue-2">
        <span flex></span>

        <div layout="column" class="md-toolbar-tools-bottom inset">
            <user-avatar><img src="{{ asset('assets/img/logo_234.png') }}" alt=""></user-avatar>
            <span></span>
            <!--
            <div>Firstname Lastname</div>
            <div>email@domainname.com</div>
            -->
        </div>
    </md-toolbar>

    <md-list>
        <md-list-item ng-repeat="item in vm.menu">
            <div ui-sref="[[ item.sref ]]">
                <md-item-content md-ink-ripple layout="row" layout-align="start center">
                    <div class="inset">
                        <ng-md-icon icon="[[item.icon]]"></ng-md-icon>
                    </div>
                    <div class="inset">[[item.title]]
                    </div>
                </md-item-content>
            </div>
        </md-list-item>


        <md-divider></md-divider>
        <md-subheader>Management</md-subheader>
        <md-item ng-repeat="item in admin">
            <a>
                <md-item-content md-ink-ripple layout="row" layout-align="start center">
                    <div class="inset">
                        <ng-md-icon icon="[[item.icon]]"></ng-md-icon>
                    </div>
                    <div class="inset">[[item.title]]
                    </div>
                </md-item-content>
            </a>
        </md-item>
    </md-list>
</md-sidenav>
<!-- ./Sidenav -->

<div layout="column" class="relative" layout-fill role="main">

    <!-- Tool Bar -->
    <md-toolbar>
        <div class="md-toolbar-tools">
            <md-button ng-click="vm.toggleSidenav('left')" hide-gt-md aria-label="Menu">
                <ng-md-icon icon="menu"></ng-md-icon>
            </md-button>
            <h3>
                Solar Bear
            </h3>
            <span flex></span>
        </div>
    </md-toolbar>

    <md-content flex>

        <ui-view layout="column" layout-fill layout-padding>
            <md-card>
                        <!-- small box -->
                        <div class="col-lg-3 col-xs-6">
                            <div class="small-box bg-aqua">
                                <div class="inner">
                                    <h3>[[ vm.countCustomers ]]</h3>
                                    <p>New Customers</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-person-stalker"></i>
                                </div>
                                <a ui-sref="home.customer_list" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
            </md-card>

            <md-card>
                <!-- small box -->
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3>[[ vm.countAppointments ]]</h3>
                            <p>New Appointments</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-ios-alarm-outline"></i>
                        </div>
                        <a ui-sref="home.appointment_list" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </md-card>
        </ui-view>
    </md-content>

</div>
